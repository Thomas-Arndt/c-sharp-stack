<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <title>Razor Fun!</title>
    </head>
    <body>
        @{
            List<string> Menu = new List<string>
                {
                    "Tacos",
                    "Burrito",
                    "Nachos",
                    "Enchiladas",
                    "Fajitas",
                    "Tostada",
                    "Camarones"
                };

                foreach(string food in Menu) {
                    if(food.StartsWith("c") || food.StartsWith("C")) {
                        <p style="color: red;">@food</p>
                    } else {
                        <p>@food</p>
                    }
                }
        }
    </body>
</html>

